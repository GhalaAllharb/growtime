<body>
  <header>🌱 GrowTime — ازرع وقتك واحصد إنجازاتك</header>

  <div class="timer-box">
    <label for="duration">اختر مدة الجلسة:</label>
    <input type="range" id="duration" min="5" max="120" value="25" step="5" oninput="updateLabel()">
    <div id="duration-label">25 دقيقة</div>

    <label for="task">ما الذي ستُنجزه الآن؟ (اختياري)</label>
    <input type="text" id="task" placeholder="مثال: مذاكرة / مراجعة / واجب">

    <div class="circle" id="timer">25:00</div>

    <button onclick="startSession()">ابدأ الجلسة</button>
    <button onclick="resetSession()">إعادة</button>
  </div>

  <footer id="quote">المستقبل لا يُختار، بل يُصنع بعاداتك 🌟</footer>

  <script>
    let timerInterval;
    let timeLeft = 25 * 60;

    function updateLabel() {
      const val = document.getElementById("duration").value;
      document.getElementById("duration-label").textContent = val + " دقيقة";
      document.getElementById("timer").textContent = val + ":00";
      timeLeft = val * 60;
    }

    function startSession() {
      clearInterval(timerInterval);
      timerInterval = setInterval(() => {
        if (timeLeft <= 0) {
          clearInterval(timerInterval);
          alert("🎉 مبروك! أنجزت جلستك.\nاستمر — ازرع وقتك، واحصد إنجازاتك!");
        } else {
          timeLeft--;
          const minutes = Math.floor(timeLeft / 60);
          const seconds = timeLeft % 60;
          document.getElementById("timer").textContent =
            (minutes < 10 ? "0" : "") + minutes + ":" +
            (seconds < 10 ? "0" : "") + seconds;
        }
      }, 1000);
    }

    function resetSession() {
      clearInterval(timerInterval);
      const val = document.getElementById("duration").value;
      timeLeft = val * 60;
      document.getElementById("timer").textContent = val + ":00";
    }

    // تسجيل Service Worker
    if ("serviceWorker" in navigator) {
      navigator.serviceWorker.register("sw.js");
    }
  </script>
</body>
